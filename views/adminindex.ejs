<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css"  />
</head>
<style>
    h2{
        margin: 20px;
        padding: 20px;
    }
    .form-select{
      width: 200px;
    }
</style>
<body>
    <%-include('./navbar')-%> 
 
  
        













         <section class="ftco-section">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Inactive Users</h2>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <h4 class="text-center mb-4">Change the status</h4>
        
                <div class="table-wrap">
                  <table class="table">
                    <thead class="thead-primary">
                      
    
                      <tr>
                        <th>First Name</th>

                        <th>last Name</th>
                        <th>Email</th>
                        <th>Date Of Birth</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Update</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var data of list){ %>
                      <tr>
                        <th scope="row" class="scope" ><%=data.email%></th>
                        <td><%=data.firstname  %></td>
                        <td><%=data.lastname  %></td>
                        <td><%=data.dateofbirth  %></td>
                        <td><%=data.role  %></td>
                        <td>            <form action="/admin/update" method="post">
                          <div class="form-check">
                            <input type="hidden" name="id" value="<%= data.id %>" >  
                          <input class="form-check-input" type="radio" name="status" id="flexRadioDefault1" value="active">
                          <label class="form-check-label" for="flexRadioDefault1" >
                           active 
                          </label>
                        </div>
                        <div class="form-check">
                        
                          <input class="form-check-input" type="radio" name="status" id="flexRadioDefault2" checked value="inactive" >
                          <label class="form-check-label" for="flexRadioDefault2">
                            Inactive
                          </label>
                        </div></td>
                        <td><button class="btn btn-primary">Change</button></td>
                      </form>
                      </tr>
                      
                      <% } %>
                   
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </section>

    
      
        <script src="js/jquery.min.js"></script>
        <script src="js/popper.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/main.js"></script>
      
        





















   <h2>All Users</h2> 
<table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col-md-8">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Date of Birth</th>
        <th scope="col">Role</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
        <% for(var data of dat){ %>
      <tr>
        <th scope="row"><%=data.id  %> </th>
        <td><%=data.firstname  %> </td>
        <td><%=data.lastname%></td>
        <td><%=data.email%></td>
        <td><%=data.dateofbirth  %> </td>
        <td><%=data.role  %> </td>
        <td><%=data.status  %> </td>
       
      </tr>
     
      
      <% } %>
    </tbody>
  </table>


  <%-include('./footer')-%> 
</body>
</html>